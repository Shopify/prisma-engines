generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:foo.bar?foo=bar" // env("JS_LIBSQL_DATABASE_URL") // TODO Figure out why random key-value pair is needed not to crash here
}

model type_test {
  id                   Int       @id @default(autoincrement())
  int_column           Int      // integer
  int_column_null      Int?
  bigint_column        BigInt   // "integer"
  bigint_column_null   BigInt?
  double_column        Float    // real
  double_column_null   Float?
  boolean_column       Boolean  // numeric
  boolean_column_null  Boolean?
  text_column          String   // text
  text_column_null     String?
  datetime_column      DateTime  // numeric
  datetime_column_null DateTime?
}

// This will eventually supersede type_test
model type_test_2 {
  id                   String    @id @default(cuid())
  datetime_column      DateTime  @default(now()) // @db.Timestamp(3)
  datetime_column_null DateTime? // @db.Timestamp(3)
}

model Child {
  c          String  @unique
  c_1        String
  c_2        String
  parentId   String? @unique
  non_unique String?
  id         String  @id

  @@unique([c_1, c_2])
}

model Parent {
  p          String  @unique
  p_1        String
  p_2        String
  non_unique String?
  id         String  @id

  @@unique([p_1, p_2])
}

